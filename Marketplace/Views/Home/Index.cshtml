@model IEnumerable<Marketplace.Models.Item>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager


        @{
    ViewData["Title"] = "Index";
        }

        <h1>Home</h1>

        <form asp-controller="Products" asp-action="Index" method="get">
            <input type="text" placeholder="Search For..." name="searchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-sm btn-primary" />
        </form>
        <br />

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPrice)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
                <tr>
                    <td>
                        <a asp-controller="Items" asp-action="BuyerDetails" asp-route-id="@item.ItemId">
                            @Html.DisplayFor(model => item.Title)
                        </a>
                    </td>
                    <td>
                        <img class="attract-home" src="~/images/@item.ImagePath"
                             asp-append-version="true" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ListPrice)
                    </td>
                </tr>
        }
            </tbody>

        </table>
